{
  "manifest_version": 2,

  "name": "CppBrowser",
  "description": "This extension is used for analysising the behavior of people while they are coding. ",
  "version": "1.0",

  "background": { 
    "scripts": ["jquery-3.2.0.min.js", "json2.js", "background.js"] ,
    "persistent": true
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab", 
    "webRequest", 
    "tabs", 
    "webRequestBlocking", 
    "<all_urls>"
  ]
}